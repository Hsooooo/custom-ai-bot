# System
# Timezone for the services
TZ=Asia/Seoul

# Postgres
POSTGRES_USER=clawd_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=clawd_db

# pgweb (local-only DB admin UI)
# Access via: ssh -L 8081:127.0.0.1:8081 <server>
PGWEB_PORT=8081
PGWEB_USER=admin
PGWEB_PASS=change-me

# Redis (optional - will use defaults if not set)
REDIS_HOST=redis
REDIS_PORT=6379

# Telegram
TELEGRAM_BOT_TOKEN=123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11
TELEGRAM_ADMIN_ID=123456789

# Garmin
GARMIN_EMAIL=your_email@example.com
GARMIN_PASSWORD=your_password

# Worker Configuration
# How often to check for updates (in seconds)
WORKER_INTERVAL=3600

# Obsidian
# Path to the vault relative to the container usually /obsidian
OBSIDIAN_VAULT_PATH=/obsidian

# =============================================================================
# Phase 2: External Services (Optional)
# =============================================================================

# Weather API (OpenWeatherMap)
# Get free API key at: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key
OPENWEATHER_CITY=Seoul

# Google Calendar API
# Setup instructions: https://developers.google.com/calendar/api/quickstart/python
# For public calendars, use API key. For private calendars, use OAuth2 service account.
GOOGLE_CALENDAR_API_KEY=your_google_calendar_api_key
GOOGLE_CALENDAR_ID=primary

# GitHub API
# Create personal access token at: https://github.com/settings/tokens
# Required scopes: repo (for private repos), read:user
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_USERNAME=your_github_username

# =============================================================================
# Monitoring Thresholds
# =============================================================================

# Disk usage alert threshold (percent)
DISK_THRESHOLD_PERCENT=85

# Memory usage alert threshold (percent)
MEMORY_THRESHOLD_PERCENT=85

# Container restart count before alerting
CONTAINER_RESTART_THRESHOLD=3
